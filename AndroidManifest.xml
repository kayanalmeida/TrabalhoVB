            android:name="com.example.trabalhovb.MenuScene"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.trabalhovb.GameSceneActivity"
            android:label="@string/title_activity_game_scene" >
        </activity>
        <activity
            android:name="com.example.trabalhovb.EndGameScene"
            android:label="@string/title_activity_end_game_scene" >
        </activity>
        <activity
            android:name="com.example.trabalhovb.SelectPackageScene"
            android:label="@string/title_activity_select_package_scene" >
        </activity>
    </application>

</manifest>
